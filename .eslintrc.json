{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:solid/recommended", "prettier"],
  "overrides": [
    {
      "files": "**/*.test.+(ts|tsx)",
      "plugins": ["jest"],
      "extends": ["plugin:jest/recommended"],
      "env": {
        "jest/globals": true
      }
    }
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["solid", "prettier"],
  "rules": {
    "prettier/prettier": ["error"],
    "no-unused-vars": "off" // TODO: Redo the whole ESLint + Prettier setup
  },
  "settings": {
    "jest": {
      "version": 27
    }
  }
}
